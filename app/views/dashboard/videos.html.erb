<%= render ("layouts/dashboard") %>  
    <main class="flex-1">
      <div class="py-6">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
          <h1 class="text-2xl font-semibold text-gray-900"><%= t('.videos_title') %></h1>
        </div>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
          
          <div class="py-4">
            <% if @videos.count == 0 %>
              <%= link_to t('.upload_first_video'), new_video_path %>
            <% else%>
              <% @videos.each do |video| %>
                <div>
                  <%= video.title %>
                </div>
              <% end %>
              <%= link_to t('.upload_video'), new_video_path %>
            <% end %>
          </div>
          
        </div>
      </div>
    </main>
  </div>
</div>

